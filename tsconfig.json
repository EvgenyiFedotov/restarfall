{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "esModuleInterop": true,
    "strictNullChecks": true,

    "declaration": true,
    "outDir": "./dist/types"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
